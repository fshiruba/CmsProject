@using CmsProject.Models.Blocks.EmployeeList
@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using System.Diagnostics
@using MoreLinq
@model EmployeeListViewModel

<div class="container-fluid ArticleListblock">

    <div class="row align-items-center" style="margin-bottom:40px">

        <div class="col-3"></div>
        <div class="col">@Html.PropertyFor(x=>x.CurrentBlock.IntroText)</div>
        <div class="col-4"></div>
    </div>

    <div class="row align-items-center">

        @*SPACER*@
        <div class="col-2"></div>

        <div class="col-8">
            <div class="row row-cols-2" data-masonry='{"percentPosition": true }'>

                @{
                    bool isLeft = true;
                }

                @foreach (var item in Model.CurrentBlock.EmployeeListItems)
                {
                    //var link1 = item?.Link?.FirstOrDefault()?.Href ?? string.Empty;
                    var margin = "margin-left:auto;margin-right:auto;margin-bottom:200px;";

                    @*BOX*@
                    <div class="col" style="@margin">
                        
                            <img src="@Url.ContentUrl(item.ArticleImage)" class="articleimg" />
                        

                        <div class="col-12">
                            @Html.PropertyFor(x=> item.Text)
                        </div>
                    </div>

                    @if (isLeft)
                    {
                        @*<div class="col-2" style="height:400px;background-color:green"></div>*@
                    }
                    else
                    {

                    }

                    isLeft = !isLeft;
                }
            </div>
        </div>

        @*SPACER*@
        <div class="col-2"></div>

    </div>



</div>





