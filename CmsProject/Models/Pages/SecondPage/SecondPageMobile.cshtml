@using EPiServer.Web.Mvc.Html
@using CmsProject.Models.Pages.SecondPage
@model SecondPage

@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

<div class="container-fluid">
    <div class="row myPage">
        <div class="col-xs-12 col-md-9">

            <div class="col-12">
                <h2>@Html.PropertyFor(x => x.Title)</h2>
            </div>

            @if ((Model.MainBody != null && !Model.MainBody.IsEmpty))
            {
                <div class="col-12">
                    @Html.PropertyFor(m => m.MainBody)
                </div>
            }

            <div class="col-12">
                @Html.PropertyFor(x => x.MainContentArea)
            </div>

            <div class="col-12">
                <b>MOBILE VERSION</b>
            </div>
        </div>
    </div>
</div>